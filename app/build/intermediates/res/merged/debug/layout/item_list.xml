                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="#59b2be"
                android:id="@+id/waktu"
                android:text="2017-08-10 09:29:35"
