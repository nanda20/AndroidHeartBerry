<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_condition_now"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e8e9"
    tools:context="com.dev.muslim.heartberry.ConditionNow">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/heartrate"
        android:id="@+id/ic_heartRate"
        android:layout_below="@+id/mainBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:background="@drawable/buttonshape"
        android:layout_marginTop="10dp"
        android:id="@+id/btnDetail"
        android:layout_below="@+id/ic_heartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEE A RECHORD"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:drawableRight="@android:drawable/ic_media_play"
        android:padding="10dp"
        />

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="31dp"
        android:id="@+id/mainBox"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/mainInfo"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
             <TextView
                 android:layout_margin="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="00"
                 android:id="@+id/txtHeartRate"
                 android:textSize="80dp" />

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtHeartRate"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_heart"
                        android:id="@+id/icHeart"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtMinute"
                        android:textSize="20dp"
                        android:layout_centerHorizontal="true"
                        android:text="bpm"
                        android:layout_below="@+id/icHeart"
                        android:fontFamily="sans-serif-condensed" />

                </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
